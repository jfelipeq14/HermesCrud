@model HermesCrud.Models.Reserva

@{
    ViewData["Title"] = "Eliminar";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h3 class="text-danger"> ¿Esta seguro de eliminar el empleado?</h3>
<hr />
<div class="row">
    <div class="col-sm-4">

        <form asp-action="Eliminar" asp-controller="Home" method="post">
            <input type="hidden" asp-for="IdReserva" />

            <div class="mb-3">
                <label class="form-label" asp-for="IdProgramacion">Programación</label>
                <input class="form-control form-control-sm" asp-for="oProgramacion.FechaEjecucion" type="date" disabled />
            </div>

            <div class="mb-3">
                <label class="form-label" asp-for="IdCliente">Cliente</label>
                <input class="form-control form-control-sm" asp-for="oCliente.oUsuario.Nombre" type="number" disabled />
            </div>

            <div class="mb-2">
                <label class="form-label" asp-for="FechaReserva">Fecha reserva</label>
                <input class="form-control form-control-sm" asp-for="FechaReserva" type="date" disabled />
            </div>

            <div class="mb-2">
                <label class="form-label" asp-for="ValorReserva">Valor</label>
                <input class="form-control form-control-sm" asp-for="ValorReserva" type="number" disabled />
            </div>

            <div class="mb-2">
                <label class="form-label" asp-for="EstadoReserva">Estado</label>
                <input class="form-control form-control-sm" asp-for="EstadoReserva" type="text" disabled/>
            </div>

            <div class="mb-2">

                <button class="btn btn-danger btn-sm w-25" type="submit">Eliminar</button>
                <a class="btn btn-dark btn-sm" asp-action="Index" asp-controller="Home">Volver</a>

            </div>

        </form>

    </div>
</div>

