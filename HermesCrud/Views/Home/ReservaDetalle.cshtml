@model HermesCrud.Models.ViewModels.ReservaVM
@{
    ViewData["Title"] = "ReservaDetalle";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@if (Model.oReserva.IdReserva == 0)
{

    <h1>Crear Reserva</h1>
}
else
{
    <h1>Editar Reserva</h1>
}


<div class="row">
    <div class="col-sm-4">

        <form asp-action="ReservaDetalle" asp-controller="Home" method="post">
            <input type="hidden" asp-for="oReserva.IdReserva" />

            <div class="mb-3">
                <label class="form-label" asp-for="oReserva.IdProgramacion">Programación</label>
                <select class="form-select form-select-sm" asp-for="oReserva.IdProgramacion" asp-items="@Model.oListaProgramacion">
                    <option selected disabled>-- Seleccionar --</option>
                </select>
            </div>

            <div class="mb-3">
                <label class="form-label" asp-for="oReserva.IdCliente">Cliente</label>
                <select class="form-select form-select-sm" asp-for="oReserva.IdCliente" asp-items="@Model.oListaCliente">
                    <option selected disabled>-- Seleccionar --</option>
                </select>
            </div>

            <div class="mb-2">
                <label class="form-label" asp-for="oReserva.FechaReserva">Fecha reserva</label>
                <input class="form-control form-control-sm" asp-for="oReserva.FechaReserva" type="date" />
            </div>

            <div class="mb-2">
                <label class="form-label" asp-for="oReserva.ValorReserva">Valor</label>
                <input class="form-control form-control-sm" asp-for="oReserva.ValorReserva" type="number" />
            </div>

            <div class="mb-2">
                <label class="form-label" asp-for="oReserva.EstadoReserva">Estado</label>
                <select class="form-select form-select-sm" asp-for="oReserva.EstadoReserva">
                    <option selected disabled>-- Seleccionar --</option>
                    <option value="N">Pendiente</option>
                    <option value="C">Confirmada</option>
                    <option value="P">Pagada</option>
                    <option value="M">Modificada</option>
                    <option value="R">Cancelada</option>
                    <option value="A">Anulada</option>
                    <option value="E">En curso</option>
                    <option value="F">Finalizada</option>
                </select>
            </div>

            

            <div class="mb-2">

                @if (Model.oReserva.IdReserva == 0)
                {
                    <button class="btn btn-primary btn-sm w-25" type="submit">Crear</button>
                }
                else
                {
                    <button class="btn btn-primary btn-sm w-25" type="submit">Actualizar</button>

                }
                <a class="btn btn-dark btn-sm" asp-action="Index" asp-controller="Home">Volver</a>

            </div>

        </form>

    </div>
</div>

